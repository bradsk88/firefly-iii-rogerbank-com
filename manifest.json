{
  "name": "RogersBank -> Firefly III",
  "version": "1.0",
  "description": "Scrapes account and transaction data from Rogers Bank (MasterCard) into Firefly III",
  "permissions": [
    "identity",
    "clipboardWrite",
    "storage"
  ],
  "options_page": "options.html",
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "./dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://rbaccess.rogersbank.com/app/accountSummary"],
      "js": ["./dist/accounts.js"]
    },
    {
      "matches": ["https://rbaccess.rogersbank.com/app/transactions"],
      "js": ["./dist/transactions.js"]
    },
    {
      "matches": ["https://*.example.com/*"],
      "js": ["./dist/opening.js"]
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "devtools_page": "devtools.html",
  "manifest_version": 3
}